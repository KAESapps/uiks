{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "worker": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-undef": 2,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": 1,
    "comma-dangle": [1, "always-multiline"],
    "no-mixed-spaces-and-tabs": 1,
    "key-spacing": 1,
    "no-bitwise": 1,
    "semi": [1, "never"],
    "no-duplicate-imports": "error",
    "no-const-assign": "error",
    "no-console": "off"
  },
  "globals": {
    "process": false
  }
}
